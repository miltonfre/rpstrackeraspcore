@page
@model RPS.Web.Pages.Backlog.CreateModel


<h2>Add New Item</h2>

<form method="post">

    <div class="form-group row">

     

        <label asp-for="@Model.Title" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <kendo-textbox name="Title">
                <textbox-label content="@Model.Title" />
            </kendo-textbox>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="@Model.Description" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <kendo-textarea name="Description"
                            value="@Model.Description"
                            rows="5">
            </kendo-textarea>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="@Model.TypeStr" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <kendo-dropdownlist name="TypeStr" value="@Model.TypeStr"
                                bind-to="@Model.ItemTypes">
               
            </kendo-dropdownlist>

           
        </div>
    </div>


    <div class="form-group row">
        <div class="offset-sm-2 col-sm-10">
            <input type="submit" value="Add" class="btn btn-primary" />
        </div>
    </div>
</form>


<div>
    <a href="/Backlog">Back to List</a>
</div>
