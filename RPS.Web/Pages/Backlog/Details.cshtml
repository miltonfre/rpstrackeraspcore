@section styles {
    <link href="~/css/detail.css" rel="stylesheet" />
}

@section scripts {
    <partial name="_TasksScripts" />
    <script>
        function pushUrl(title,url){
            if('undefined' !== typeof history.pushState){
                history.pushState(null, title,url);
            }else{
                window.location.assign(url);
            }
        }
    </script>
}